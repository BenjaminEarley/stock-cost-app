<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.StockCost.Dark.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:statusBarColor" tools:targetApi="l">?colorSecondary</item>
        <item name="android:navigationBarColor">?colorSecondary</item>
    </style>

    <style name="Theme.StockCost.Dark" parent="Theme.StockCost" />

    <style name="Theme.StockCost" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/off_white</item>
        <item name="colorSecondary">@color/almost_black</item>
        <item name="colorSecondaryVariant">@color/black</item>

        <item name="up">@color/green</item>
        <item name="down">@color/yellow</item>

        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="colorSurface">@color/gray</item>
        <item name="colorError">@color/orange</item>

        <item name="colorOnPrimary">@color/almost_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?colorSecondary</item>
        <item name="android:navigationBarColor">?colorSecondary</item>

        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.StockCost.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.StockCost.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.StockCost.LargeComponent
        </item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.StockCost.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.StockCost.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.StockCost.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.StockCost.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.StockCost.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.StockCost.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.StockCost.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.StockCost.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.StockCost.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.StockCost.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.StockCost.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.StockCost.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.StockCost.Overline</item>

        <item name="floatingActionButtonStyle">@style/Widget.StockCost.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.StockCost.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
</resources>